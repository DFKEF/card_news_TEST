<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pop_image"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hello" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FAFAFA">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_favorite_pink"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pop_likenum"
                    android:textSize="13sp"
                    android:text="20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="5dp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E6FAFAFA"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/pop_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:text="라이언은 귀여워"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp">
                    <ImageView
                        android:id="@+id/pop_profile"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/muzzi"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/pop_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신건호" />

                </LinearLayout>



                <TextView
                    android:id="@+id/pop_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과학/김정훈"
                    android:paddingHorizontal="15dp"
                    android:layout_gravity="end"/>

            </FrameLayout>

        </LinearLayout>


    </FrameLayout>



</LinearLayout>